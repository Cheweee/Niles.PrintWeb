{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "chrome + api",
            "configurations": [
                "chrome",
                "api"
            ]
        },
    ],
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "chrome",
            "preLaunchTask": "chrome_build",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}/printweb",
            "breakOnLoad": false,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
              "webpack:\\*": "${workspaceRoot}/printweb/*"
            }       
        },
        {
            "name": "api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "api_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Api/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "justMyCode": false,
            "suppressJITOptimizations": true,
        },
        {
            "name": "utility create database",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "create"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility drop database",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "drop"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility migrate down database",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "migrate-down"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility migrate up database",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "migrate-up"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility reset",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "reset",
                "--database-host", "localhost\\sqlexpress",
                "--database-name", "printweb",
                "--database-user-name", "sa",
                "--database-password", "qwerty_123",
                "--database-provider", "0"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility settings update",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "settings-update",
                "--database-host", "localhost\\sqlexpress",
                "--database-name", "printweb",
                "--database-user-name", "sa",
                "--database-password", "qwerty_123",
                "--database-provider", "0"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility azure database create",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "create"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility azure database drop",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "drop"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility azure database migrate-up",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "migrate-up"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "utility azure database reset",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "utilities_build",
            "program": "${workspaceFolder}/Niles.PrintWeb.Utilities/bin/Debug/netcoreapp3.0/Niles.PrintWeb.Utilities.exe",
            "args": [
                "reset",
                "--database-host", "tcp:niles.database.windows.net",
                "--database-port", "1433",
                "--database-name", "printweb",
                "--database-user-name", "chewee",
                "--database-password", "WeCreateOurFuture1",
                "--database-provider", "0"
            ],
            "cwd": "${workspaceFolder}/Niles.PrintWeb.Utilities",
            "console": "internalConsole",
            "stopAtEntry": false
        },
    ]
}